<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="nopCommerce test">
    <parameter name="useCloudEnv" value="true"/>
    <parameter name="envName" value="browserstack"/>
    <parameter name="os" value="windows"/>
    <parameter name="osVersion" value="10"/>
    <parameter name="browserVersion" value="110"/>

    <parameter name="browserName" value="chrome"/>
    <parameter name="url" value="https://demo.nopcommerce.com/"/>
    <test name="nopCommerce Tests">
        <classes>
            <class name="nopCommerce.RegisterNewUser"/>
            <class name="nopCommerce.LoginTest"/>
            <class name="nopCommerce.LogoutTest"/>
            <class name="nopCommerce.CartTest"/>
            <class name="nopCommerce.WishListTest"/>
            <class name="nopCommerce.CheckOutTest"/>
            <class name="nopCommerce.ForgotPasswordTest"/>
            <class name="nopCommerce.MyAccountTest"/>
        </classes>
    </test>
</suite>